<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_image_selector_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/fromCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/simple_image_selector_camera"
            android:textColor="?android:attr/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/image_selector_divider_color" />

        <TextView
            android:id="@+id/fromAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/simple_image_selector_album"
            android:textColor="?android:attr/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/image_selector_divider_color" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/simple_image_selector_cancel"
            android:textColor="?android:attr/colorPrimary" />

    </LinearLayout>

</layout>